@model List<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Добавление модератора";
}
<h2>Список пользователей</h2>
<table class="table">
    <tr><th>Имя пользователя</th><th>Электронная почта</th><th>Изменение роли</th></tr>
    @foreach (var user in Model)
    {

        <tr>
            <td>@user.UserName</td>
            <td>
                @user.Email

            </td>
            <td>
                <form asp-controller="Admin" asp-action="AddModer" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-success">
                        Сделать модератором
                    </button>
                </form>
            </td>

        </tr>
        <tr></tr>
    }
</table>