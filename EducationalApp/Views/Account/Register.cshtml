@model EducationalApp.ViewModels.RegistrationViewModel
@{
    ViewData["Title"] = "Окно регистрации";
}
<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="UserName"></label><br />
        <input asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="ConfrimPassword"></label><br />
        <input asp-for="ConfrimPassword" />
        <span asp-validation-for="ConfrimPassword"></span>
    </div>
    <div>
        <input type="submit" value="Регистрация" class="btn btn-success mt-3" />
    </div>
</form>